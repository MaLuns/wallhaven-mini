<view class="share-reward-header {{blur?'blur':''}}" style="min-height: {{navBarSpaceHeight}}px" style="background-color: {{backgroundColor}}">
  <view class="navbar">
    <view style="min-height:{{statusBarHeight}}px;" />
    <view style="min-height:{{navigateContentHeight}}px;" class="navbar-content">
      <view class="go-back" style="min-height:{{navigateContentHeight}}px;">
        <slot></slot>
      </view>
      <text class="navbar-title" style="max-width:{{navigateTitleMaxWidth}}px;color:{{color}}">{{title}}</text>
    </view>
  </view>
</view>
<view wx:if="{{isblock}}" style="min-height: {{navBarSpaceHeight}}px;width:100%;">
  <slot name="block"></slot>
</view>