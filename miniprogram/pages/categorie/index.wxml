<ow-custom-navigation title="{{title}}" color="#fff" blur="true" backgroundColor="#ffffff00">
  <view class="close" bindtap="onClose">←</view>
</ow-custom-navigation>
<ow-image-list id="image-list" bindclick="onPreviewList"></ow-image-list>
