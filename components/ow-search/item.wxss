.search-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 80rpx;
  padding: 10rpx 0;
}

.search-item+.search-item {
  border-top: 1px solid #6d6c6c;
}

.default {
  display: none;
}

.slot:empty+.default {
  display: block;
}

.search-item-label {
  margin-right: 20px;
}

.search-item-value {
  flex: 1;
  text-align: right;
}